@model MVC_Torneio.Models.DadosLutador

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes do Lutador</h2>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"]</div>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Nome</th>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <th>Idade</th>
            <td>@Model.Idade</td>
        </tr>
        <tr>
            <th>Artes Marciais</th>
            <td>@Model.ArtesMarciais</td>
        </tr>
        <tr>
            <th>Vitórias</th>
            <td>@Model.Vitorias</td>
        </tr>
        <tr>
            <th>Derrotas</th>
            <td>@Model.Derrotas</td>
        </tr>
    </table>
}

<hr />

<div class="d-flex gap-2 mt-3">

    <form method="get" asp-controller="Lutador" asp-action="Detalhes" class="d-flex gap-2">
        <div>
            <label>Buscar outro ID:</label>
            <input type="number" name="lutadorId" class="form-control" required />
        </div>
        <div class="d-flex align-items-end">
            <button class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <div class="d-flex align-items-end">
        <a asp-controller="Lutador" asp-action="Listar" class="btn btn-outline-dark">
            Voltar
        </a>
    </div>

</div>




<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto Torneio</title>
    <link rel="icon" type="image/x-icon" href="/images/luvas.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_Torneio.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Projeto Torneio
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Menu</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Torneio" asp-action="Listar">Torneios</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lutador" asp-action="Listar">Lutadores</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>


    <div class="container mt-4 mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top text-muted py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - Projeto Torneio
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", false)

</body>
</html>

@model MVC_Torneio.DTO.EditarTorneioDto

@{
    ViewData["Title"] = "Editar Torneio";
}

<h2>Editar Torneio</h2>

<form asp-action="Editar" method="post" class="mt-3">

    <!-- Campo oculto para enviar o ID -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="VencedorId">Vencedor (ID do Lutador)</label>
        <input asp-for="VencedorId" type="number" class="form-control" />
        <span asp-validation-for="VencedorId" class="text-danger"></span>
    </div>

    <br />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>

        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

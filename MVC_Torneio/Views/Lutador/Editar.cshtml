@model MVC_Torneio.DTO.EditarLutadorDto

@{
    ViewData["Title"] = "Editar Lutador";
}

<h2>Editar Lutador</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" type="number" class="form-control" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArtesMarciais"></label>
        <input asp-for="ArtesMarciais" type="number" class="form-control" />
        <span asp-validation-for="ArtesMarciais" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Editar Lutador</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model MVC_Torneio.DTO.CriarLutadorDto

@{
    ViewData["Title"] = "Criar Lutador";
}

<h2>Criar Lutador</h2>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" type="number" class="form-control" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArtesMarciais"></label>
        <input asp-for="ArtesMarciais" type="number" class="form-control" />
        <span asp-validation-for="ArtesMarciais" class="text-danger"></span>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Criar Lutador</button>

        <a asp-controller="Lutador" asp-action="Listar" class="btn btn-outline-dark">
            Voltar
        </a>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
